{
    "name": "my-playground-modernized",
    "version": "1.0.0",
    "description": "Modernized My Playground application with SOLID principles and clean architecture",
    "type": "module",
    "scripts": {
        "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "dev": "python my-playground/server.py",
        "build": "echo 'No build step required for ES modules'",
        "lint": "eslint src/ my-playground/js/",
        "start": "python my-playground/server.py",
        "validate": "node my-playground/validate-phase1.js",
        "test-browser": "python my-playground/server.py && echo 'Open http://localhost:8080/phase1-test.html'"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "globals": {
            "__DEV__": true
        },
        "transform": {},
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1",
            "^@core/(.*)$": "<rootDir>/src/Core/$1",
            "^@domain/(.*)$": "<rootDir>/src/Domain/$1",
            "^@application/(.*)$": "<rootDir>/src/Application/$1",
            "^@infrastructure/(.*)$": "<rootDir>/src/Infrastructure/$1",
            "^@presentation/(.*)$": "<rootDir>/src/Presentation/$1"
        },
        "testMatch": [
            "<rootDir>/src/Tests/**/*.test.js",
            "<rootDir>/src/**/__tests__/**/*.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/Tests/**",
            "!src/**/__tests__/**",
            "!src/**/index.js"
        ],
        "coverageReporters": [
            "text",
            "html",
            "lcov"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/Tests/setup.js"
        ]
    },
    "devDependencies": {
        "eslint": "^8.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.0.0"
    },
    "keywords": [
        "javascript",
        "modernization",
        "solid-principles",
        "clean-architecture",
        "dependency-injection"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "dotenv": "^17.2.3",
        "mysql2": "^3.15.3"
    }
}
