# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Application Environment (development, staging, production)
NODE_ENV=development

# Debug Mode (true for verbose logging)
DEBUG=true

# Server Configuration
PORT=8000
HOST=localhost

# Application URL (for when deployed to a server)
# In development, this will be http://localhost:8000
# In production, this should be your domain (e.g., https://myplayground.example.com)
APP_URL=http://localhost:8000

# ============================================
# DATABASE CONFIGURATION (Phase 8)
# ============================================

# MySQL Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=myplayground_dev

# Connection Pool Settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# Enable Database (false for Phase 1-7, true when Phase 8 is implemented)
USE_DATABASE=false

# ============================================
# EXTERNAL SERVICES
# ============================================

# MyAnimeList API (if you get an official API key in the future)
MAL_API_KEY=
MAL_API_SECRET=

# YouTube API (optional, for better playlist/video handling)
YOUTUBE_API_KEY=

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT Secret (for Phase 8 authentication)
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# Session Secret (for future session management)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS Settings (comma-separated allowed origins)
# In development: http://localhost:8000
# In production: your actual domain(s)
CORS_ORIGIN=http://localhost:8000

# ============================================
# CACHING CONFIGURATION
# ============================================

# Cache TTL (Time To Live) in milliseconds
CACHE_TTL=300000
# Default: 5 minutes (300000ms)

# Cache Max Size (number of entries)
CACHE_MAX_SIZE=100

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# Log File Path (optional, leave empty to log to console only)
LOG_FILE_PATH=

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/Disable Features
FEATURE_SCHEDULE_UPDATES=true
FEATURE_MUSIC_PLAYER=true
FEATURE_IMPORT=true
FEATURE_EXPORT=true

# ============================================
# STORAGE CONFIGURATION
# ============================================

# Storage Type (localStorage for Phase 1-7, mysql for Phase 8)
STORAGE_TYPE=localStorage

# Data Directory (for JSON file storage)
DATA_DIR=./data

# ============================================
# PERFORMANCE MONITORING
# ============================================

# Enable Resource Monitoring (Phase 6)
ENABLE_RESOURCE_MONITOR=true

# Performance Thresholds
MAX_MEMORY_MB=100
MAX_LOAD_TIME_MS=1000